@model IEnumerable<MTracking.Models.Project>

@{
    ViewBag.Title = "Projects";
}

<h2>Projects</h2>
<a href="/Home/CreateProject" style="margin:10px;" class="btn btn-success btn-xs">Create</a>

<ul class="list-group">
    @{ 
        int id = (Session["user"] as dynamic).Id;
    }

    <div class="list-group">
        @foreach (var item in Model)
        {
            <a href="/Home/ProjectDetails/@item.Id" class="list-group-item">
                @item.Name
                @if (@item.OwnerId == id)
                {
                    <span>*</span>
                }
                <span class="badge">14</span>
            </a>
        }
    </div>
</ul>

@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        You do not participating in any project.
    </div>
}




</table>
