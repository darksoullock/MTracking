@model MTracking.Models.Bug

@{
    ViewBag.Title = "Create";
}

<h2>Create bug</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Bug</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5 } )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReproductionSteps, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ReproductionSteps, new { @class = "form-control", rows = 5 } )
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ExpectedResult, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ExpectedResult, new {  @class = "form-control", rows = 5 })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ActualResult, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.ActualResult, new { @class = "form-control", rows = 5 } )
            </div>
        </div>

        <div class="form-group">
            @Html.Label("BugStatusId", "Bug Status", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BugStatusId",
               (ViewBag.Statuses as IEnumerable<MTracking.Models.dic_BugStatuses>).Select(i => new SelectListItem() { Text = i.Status, Value = i.Id.ToString() }),
               "Select status"
               , htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Assigned", "Assigned to", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UserId",
               (ViewBag.Users as IEnumerable<MTracking.Models.User>).Select(i => new SelectListItem() { Text = i.FirstName+" "+i.LastName, Value = i.Id.ToString() }),
               "Select user to assign for this bug"
               , htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <input type="hidden" name="ProjectId" value="@Model.ProjectId" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
